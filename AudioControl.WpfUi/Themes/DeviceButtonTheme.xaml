<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AudioControl.WpfUi.Core.Controls">
    <Style x:Key="DeviceButtonTheme"
           TargetType="{x:Type controls:IconButton}">
        <Setter Property="Foreground"
                Value="{StaticResource Color3}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Foreground"
                        Value="{StaticResource Color4}" />
            </Trigger>
            <Trigger Property="Button.IsPressed"
                     Value="True">
                <Setter Property="Foreground"
                        Value="{StaticResource Color2}"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>